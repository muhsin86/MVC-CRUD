    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="detailsrightcolumn">
    <div class="card">
        <h3>Are you sure you want to delete this?</h3>
        <hr />
        <p>CD NAME: @Model.Name</p>

        <p> AUTHOR NAME: @Model.Author</p>

